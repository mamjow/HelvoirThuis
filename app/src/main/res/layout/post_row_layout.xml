<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:id="@+id/post_row_id">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/postTitle"
                      android:textSize="30sp" tools:text="@string/post_title" android:textStyle="bold"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/postImage"
                    android:scaleType="fitCenter"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="145dp"

                      android:id="@+id/postHeader"
                      android:textSize="20sp"
                      android:text="@string/post_header"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="217dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/postAuthor" tools:text="@string/post_author" android:textSize="18sp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/postDate" android:layout_weight="1"
                        tools:text="@string/post_available_date" android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>